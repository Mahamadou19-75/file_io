#include <stdio.h>
#include <stdlib.h>
#include <fcntl.h>
#include <unistd.h>
#include "main.h"

/**
 * append_text_to_file - ajoute du texte à la fin d'un fichier existant
 * @filename: nom du fichier
 * @text_content: texte à ajouter (NULL terminated)
 *
 * Return: 1 si succès, -1 si échec
 */
int append_text_to_file(const char *filename, char *text_content)
{
	int fd, w;
	size_t len = 0;

	if (filename == NULL)
	return (-1);

    /* calcule la longueur de text_content si non NULL */
	if (text_content != NULL)
	{
	while (text_content[len])
	len++;
	}

    /* ouverture du fichier en écriture uniquement, sans création */
	fd = open(filename, O_WRONLY | O_APPEND);
	if (fd == -1)
	return (-1);

    /* écriture du texte si présent */
	if (len > 0)
	{
	w = write(fd, text_content, len);
	if (w != (int)len)
        {
	close(fd);
	return (-1);
	}
	}

	close(fd);
	return (1);
}
